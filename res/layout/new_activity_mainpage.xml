<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/top" >

        <LinearLayout
            android:id="@+id/mainpage_select_university"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/top_bt"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/main_page_address" />

            <TextView
                android:id="@+id/mainpage_university"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:text="大连理工大学"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:src="@drawable/main_page_down" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_page_search"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/top_bt"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/top_search" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <com.yunjian.util.GuideGallery
                        android:id="@+id/image_wall_gallery"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:fadingEdge="none"
                        android:spacing="1dip"
                        android:unselectedAlpha="1" >
                    </com.yunjian.util.GuideGallery>

                    <LinearLayout
                        android:id="@+id/gallery_point_linear"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/image_wall_gallery"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="12dp"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/image_point1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/feature_point" />

                        <ImageView
                            android:id="@+id/image_point2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/feature_point" />

                        <ImageView
                            android:id="@+id/image_point3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/feature_point" />

                        <ImageView
                            android:id="@+id/image_point4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/feature_point"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="160dp"
                        android:layout_below="@+id/gallery_point_linear"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#D0D0D0" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/select_books"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/main_page_bt"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="16dp" >

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="书籍分类"
                                        android:textColor="#7FAC3A"
                                        android:textSize="16sp" />

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="10dp" />

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="更快找到想要的书"
                                        android:textColor="@color/fontcolor" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingRight="8dp" >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/main_page_top1" >
                                    </ImageView>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="fill_parent"
                                android:background="#D0D0D0" />

                            <LinearLayout
                                android:id="@+id/select_add"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/main_page_bt"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="16dp" >

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="我要卖书"
                                        android:textColor="#FD8E1C"
                                        android:textSize="16sp" />

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="10dp" />

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="快来发布你的书吧"
                                        android:textColor="@color/fontcolor" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingRight="8dp" >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/main_page_top2" >
                                    </ImageView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#D0D0D0" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/select_goods"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/main_page_bt"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="16dp" >

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="好书评分榜"
                                        android:textColor="#FA698E"
                                        android:textSize="16sp" />

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="10dp" />

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="更快找到想要的书"
                                        android:textColor="@color/fontcolor" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingRight="8dp" >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/main_page_top3" >
                                    </ImageView>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="fill_parent"
                                android:background="#D0D0D0" />

                            <LinearLayout
                                android:id="@+id/select_comment"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/main_page_bt"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="16dp" >

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="精品书评"
                                        android:textColor="#43A8B5"
                                        android:textSize="16sp" />

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="10dp" />

                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="快来发布你的书吧"
                                        android:textColor="@color/fontcolor" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingRight="8dp" >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/main_page_top4" >
                                    </ImageView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/select_university_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/university_layout_background"
                        android:orientation="vertical"
                        android:paddingBottom="20dp" 
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="选择校区:"
                                android:textSize="14sp" >
                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text=""
                                android:textSize="12sp" >
                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text=""
                                android:textSize="12sp" >
                            </TextView>
                        </LinearLayout>

                        <include layout="@layout/university_listitem" />

                        <ListView
                            android:id="@+id/main_page_university_list"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:divider="@color/white"
                            android:dividerHeight="1px" >
                        </ListView>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#C3C3C3" >
                        </View>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:gravity="center_vertical"
                                android:text="当前校区："
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/main_page_cur_university" />

                            <TextView
                                android:id="@+id/cur_university"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="center_vertical"
                                android:text="本部"
                                android:textColor="@color/fontcolor"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#D0D0D0" />

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#D0D0D0" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="12px"
                            android:background="#F8F8FA" />

                        <LinearLayout
                            android:id="@+id/select_newbook"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/main_page_bt"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="12dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="新书到货"
                                    android:textColor="@color/fontcolor"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="更多"
                                    android:textColor="@color/fontcolor" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="right"
                                    android:paddingLeft="4dp"
                                    android:paddingRight="4dp" >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:src="@drawable/main_page_right" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#D0D0D0" />

                        <LinearLayout
                            android:id="@+id/newbook1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/main_page_bt"
                            android:orientation="horizontal"
                            android:padding="8dp" >

                            <ImageView
                                android:id="@+id/newbook1_image"
                                android:layout_width="80dp"
                                android:layout_height="110dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/default_image" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="12dp" >

                                <TextView
                                    android:id="@+id/newbook1_title"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:textColor="#7C7C7C"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/newbook1_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#848484"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/newbook1_sex"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_marginLeft="4dp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/newbook1_summary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="8dp"
                                    android:maxLines="2"
                                    android:textColor="@color/fontcolor" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/newbook2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/main_page_bt"
                            android:orientation="horizontal"
                            android:padding="8dp" >

                            <ImageView
                                android:id="@+id/newbook2_image"
                                android:layout_width="80dp"
                                android:layout_height="110dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/default_image" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="12dp" >

                                <TextView
                                    android:id="@+id/newbook2_title"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:textColor="#7C7C7C"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/newbook2_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#848484"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/newbook2_sex"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_marginLeft="4dp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/newbook2_summary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="8dp"
                                    android:maxLines="2"
                                    android:textColor="@color/fontcolor" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/select_hot"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/main_page_bt"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="12dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="热门浏览/热门评论"
                                    android:textColor="@color/fontcolor"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="更多"
                                    android:textColor="@color/fontcolor" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="right"
                                    android:paddingLeft="4dp"
                                    android:paddingRight="4dp" >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:src="@drawable/main_page_right" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:background="#D0D0D0" />

                        <LinearLayout
                            android:id="@+id/hot1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/main_page_bt"
                            android:orientation="horizontal"
                            android:padding="8dp" >

                            <ImageView
                                android:id="@+id/hot1_image"
                                android:layout_width="80dp"
                                android:layout_height="110dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/default_image" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="12dp" >

                                <TextView
                                    android:id="@+id/hot1_title"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:textColor="#7C7C7C"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/hot1_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#848484"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/hot1_sex"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_marginLeft="4dp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/hot1_summary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="8dp"
                                    android:maxLines="2"
                                    android:textColor="@color/fontcolor" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/hot2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/main_page_bt"
                            android:orientation="horizontal"
                            android:padding="8dp" >

                            <ImageView
                                android:id="@+id/hot2_image"
                                android:layout_width="80dp"
                                android:layout_height="110dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/default_image" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="12dp" >

                                <TextView
                                    android:id="@+id/hot2_title"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:textColor="#7C7C7C"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/hot2_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#848484"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/hot2_sex"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_marginLeft="4dp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/hot2_summary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="8dp"
                                    android:maxLines="2"
                                    android:textColor="@color/fontcolor" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>